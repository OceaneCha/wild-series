    {% for program in programs %}
    <div class="col-4 card mx-2 mb-2">
        <div class="card-header text-center"><h4><a href="{{ path("program_show", { slug: program.slug }) }}">{{program.title}}</a></h4></div>
    </div>
    {% else %}
    <p>Aucun programme trouv√©</p>
    {% endfor %}
</div>

{% endblock %}